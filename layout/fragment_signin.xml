<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Sign in"
        android:textColor="#EAEDED"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/u1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@color/cardview_shadow_start_color"
        android:ems="10"
        android:hint="Username"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="@color/white" />


    <EditText
        android:id="@+id/p1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/cardview_shadow_start_color"
        android:ems="10"
        android:hint="Password"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/save_post_btn"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#000C66"
        android:text="Get started"
        app:cornerRadius="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:strokeColor="#191414" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:text="Can't login? Forgot your password?" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"

        android:gravity="center"
        android:text="Or continue with"
        android:textColor="#9C1EB1" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/socialicons"
        android:layout_alignParentBottom="true"
        android:gravity="center">



        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:src="@drawable/google"
            app:maxImageSize="110dp"
            android:backgroundTint="@android:color/transparent"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/fb"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/mail"
            app:maxImageSize="50dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not a member? Register now"
        android:gravity="center"
        android:textColor="@color/white"/>


</LinearLayout>
